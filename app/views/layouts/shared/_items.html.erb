<div class="card">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
					<th> Nom </th>
					<th> Categorie </th>
          <th>Prix de d√©part</th>
          <th>Pourcentage de remise</th>
          <th>Prix</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.sort.each do |item| %>
        <tr>
					<td>
						<%= item.name %>
					</td>
					<td>
						<% category_id = Categorization.find_by(item_id: item.id).category_id %>
						<% category = Category.find(category_id) %>
						<%= category.name %>
          <td>
            <%= item.original_price.round(2) %>
          </td>
            <%= form_for [:administration, item] do |f| %>
          <td>
            <%= f.number_field :discount_percentage, class: 'form-control' %>
          </td>
          <td>
            <%= item.price.round(2) %>
          </td>
          <td>
            <%= f.submit 'Modifier', class: 'btn btn-outline-dark' %>
          </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
